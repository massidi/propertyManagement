{% extends 'base.html.twig' %}

{% block title %}Appartement{% endblock %}

{% block contenu %}




    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

                <div class="col-sm-6">
                    <h4 class="m-0 text-dark">Appartement Management</h4>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ path('mes_appartement') }}">Liste Habitation</a></li>
                        <li class="breadcrumb-item active">Detail appartement</li>
                    </ol>
                </div><!-- /.col -->

            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <div class="container">

        <div class="container-fluid">
            <div class="row">
                <div class="card">
                    {# <img class="card-img-top" #}
                    <div class="card-img-top">

                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                {% if appartement.images is not empty %}
                                <div class="carousel-item active">
                                    <img src="{{ asset('uploads/' ~ appartement.images[0].nom| imagine_filter('my_thumb') ) }}" class="d-block w-100"
                                         alt="...">
                                </div>
                                {% for images in appartement.images %}
                                    <div class="carousel-item ">
                                        <img src="{{ asset('uploads/' ~ images.nom | imagine_filter('my_thumb')) }}" class="d-block w-100" alt="...">
                                    </div>
                                {% endfor %}
                            </div>
                            {% else %}
                                <img class="card-img-top"
                                     src="https://images.unsplash.com/photo-1517303650219-83c8b1788c4c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=bd4c162d27ea317ff8c67255e955e3c8&auto=format&fit=crop&w=2691&q=80"
                                     rel="nofollow" alt="Card image cap">


                            {% endif %}

                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                               data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                               data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    {# src="{{ asset('/uploads/'~appartement.images[1].nom) }}" #}
                    {# rel="nofollow" alt="Card image cap"> #}
                    <div class="card-body">
                        <h3>Location {{ appartement.category }}</h3>
                        <h4 class="card-title">{{ appartement.nom }}</h4>
                        <ul class="list-inline" style="list-style: none;">
                            {% for accessoire in appartement.accessoires %}
                                <li class="list-inline-item">{{ accessoire.nom }}</li>
                            {% endfor %}
                        </ul>
                        <p class="card-text">Il s'agit d'une spacieuse maison de standing, lumineuse, bien exposée
                            (photo de la maison ci-dessus), dans une très belle résidence privée composée d'une
                            douzaine de maisons. Elle est à 5 minutes à pied du maison communal
                            de {{ appartement.commune }} . La plage de Karadere est à 15 minutes.

                            De construction très recente, elle dispose de tout le confort : une cuisine équipée, un
                            beau salon / séjour avec TV et DVD,
                            .</p>
                        <h4>PRIX:{{ appartement.price }} CDF /Jours</h4>
                        <h3>Description</h3>
                        <p><strong>Adresse:</strong> <br>
                            {{ appartement.commune }}  {{ appartement.adresse }}
                        </p>
                        <p><strong>Type:</strong> <br>
                            {{ appartement.category }}
                        </p>
                        <p><strong>Pièces:</strong> <br>
                        <ul>
                            {% for piece in appartement.accessoires %}
                                <li>{{ piece.nom }}</li>

                            {% endfor %}
                        </ul>

                    </div>

                </div>

            </div>

        </div>
        <a type="button" class="btn btn-success"
           href="{{ path('booking_new', {'id': appartement.id}) }}">{{ button_label|default('Booking') }}</a>

    </div>
