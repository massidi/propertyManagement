{% extends 'base.html.twig' %}

{% block title %}Categorie Appartement{% endblock %}

{% block contenu %}

    <div class="container-fluid">
        <a href="{{ path('category_new') }}" type="btn" class="btn btn-success">{{ button_label|default('ajouter') }}</a>

        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title ">Categories</h4>
                        <p class="card-category"> Liste de mes catagories</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Descriptions</th>
                                    <th>actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.id }}</td>
                                        <td>{{ category.nom }}</td>
                                        <td>{{ category.descriptions }}</td>
                                        <td>
                                            {{ include('parametre/category/_delete_form.html.twig') }}
{#                                            <a href="{{ path('category_show', {'id': category.id}) }}"><button class="btn btn-info btn-sm"> <i class="material-icons"> visibility</i></button></a>#}
                                            <a href="{{ path('category_edit', {'id': category.id}) }}"><button class="btn btn-warning btn-sm"> <i class="material-icons"> edite</i></button></a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="4">no records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
