                        <h4 class="text-right">Profile {{ society.name|upper }}</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Nom</label><input type="text" class="form-control" placeholder="first name" value="{{ society.name }}" ></div>
                        <div class="col-md-6"><label class="labels">Responsable</label><input type="text" class="form-control" value="{{ society.responsableName }}" placeholder="surname"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Adresse</label><input type="text" class="form-control" placeholder="enter address line 1" value="{{ society.adresse }}"></div>
                        <div class="col-md-12"><label class="labels">Adresse sociale</label><input type="text" class="form-control" placeholder="enter address line 2" value="{{ society.adresseSociale }}"></div>
                        <div class="col-md-12"><label class="labels">site web</label><input type="text" class="form-control" placeholder="enter address line 2" value="{{ society.siteWeb }}"></div>
                        <div class="col-md-12"><label class="labels">Numéro Registre</label><input type="text" class="form-control" placeholder="enter address line 2" value="{{ society.numeroRegistre }}"></div>
                        <div class="col-md-12"><label class="labels">Nature Societe</label><input type="text" class="form-control" placeholder="enter address line 2" value="{{ society.natureSociete }}"></div>
                        <div class="col-md-12"><label class="labels">Numéro Impot</label><input type="text" class="form-control" placeholder="enter email id" value="{{ society.numeroImpot }}"></div>
                        <div class="col-md-12"><label class="labels">Numéro Inss</label><input type="text" class="form-control" placeholder="education" value="{{ society.numeroInss }}"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><label class="labels">Code Province</label><input type="text" class="form-control" placeholder="country" value="{{ society.codeProvince }}"></div>
                        <div class="col-md-6"><label class="labels">Pays</label><input type="text" class="form-control" value="Rép.Démocratique du congo" placeholder="state"></div>
                    </div>
                </div>
            </div>
