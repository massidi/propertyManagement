                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center experience"><span>Modifier</span><a href="{{ path('society_edit', {'id': society.id}) }}"><button class="btn btn-primary profile-button" type="button">Editer</button></a></div><br>
                    <div class="col-md-12"><label class="labels">Créer en </label><input type="text" class="form-control" placeholder="experience" value="{{ society.createdAt|date('F/m/Y') }}"></div> <br>
                    <div class="col-md-12"><label class="labels">Email</label><input type="text" class="form-control" placeholder="additional details" value="{{ society.email }}"></div>
