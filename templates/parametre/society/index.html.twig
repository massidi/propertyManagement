        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="{{ asset('uploads/' ~ society.image) }}"><span class="font-weight-bold">{{ society.name|upper }}</span><span class="text-black-50">{{ society.email }}</span><span> </span></div>
            </div>
            <div class="col-md-5 border-right">
